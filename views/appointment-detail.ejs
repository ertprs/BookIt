<!DOCTYPE html>
<html lang="en">

<!-- doccure/locals.user-dashboard  30 Nov 2019 04:12:16 GMT -->

<head>
    <meta charset="utf-8">
    <title>Doccure</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <!-- Favicons -->
    <link href="/img/favicon.png" rel="icon">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="/css/style1.css">
    <link rel="stylesheet" href="/css/style.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
			<script src="/js/html5shiv.min.js"></script>
			<script src="/js/respond.min.js"></script>
		<![endif]-->

</head>

<body>

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <!-- Header -->
      
        <!-- /Header -->

        <!-- Breadcrumb -->
        <div class="breadcrumb-bar setting-bread" style="margin-top: 20px;">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-12 col-12">
                        <nav aria-label="breadcrumb" class="page-breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/index-2">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">My Appointments</li>
                            </ol>
                        </nav>
                        <h2 class="breadcrumb-title">Appointments</h2>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Breadcrumb -->

        <!-- Page Content -->
        <div class="content">
            <div class="container-fluid">

                <div class="row">

                    <!-- Profile Sidebar -->
                    <div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar no-show-mobile">
                        <div class="profile-sidebar">
                            <div class="widget-profile pro-widget-content">
                                <div class="profile-info-widget">
                                    <a href="#" class="booking-doc-img">
                                        <img src="<%=locals.user.avatar%> " alt="User Image" onerror=this.src="/img/profile.png">
                                    </a>
                                    <div class="profile-det-info">
                                        <h3>
                                            <%=locals.user.name%>
                                        </h3>
                                       
                                        <div class="locals.user-details">
                                            <%if(locals.user.dob){var newDateObject = new Date();

                                                var newObjectCurrentYear = newDateObject.getFullYear();
                                                
                                                var userDateObject = locals.user.dob;
                                                
                                                var userDateObjectPieces = userDateObject.split("/");
                                                
                                                var userObjectYear = userDateObjectPieces[2];
                                                
                                                var age = parseInt(newObjectCurrentYear) - parseInt(userObjectYear);

                                                %>
                                            <h5 style="font-size: 0.85rem;"><i class="fas fa-birthday-cake"></i>
                                                <%=locals.user.dob%> , <%=age%> Years

                                            </h5>
                                            <%}%>
                                            <%if(locals.user.city){%>
                                            <h5 class="mb-0" style="font-size: 0.85rem;"><i class="fas fa-map-marker-alt"></i>
                                                <%=locals.user.city%> 
                                                    <%=locals.user.state%>
                                            </h5>
                                            <%}%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="dashboard-widget">
                                <nav class="dashboard-menu">
                                    <ul>
                                        <li>
                                            <a href="/patient-dashboard">
                                                <i class="fas fa-columns"></i>
                                                <span>My Dashboard</span>
                                            </a>
                                        </li>
                                        <li class="active">
                                            <a href="/my-appointments">
                                                <i class="fas fa-calendar-alt"></i>
                                                <span>My Appointments</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/prescription">
                                                <i class="fas fa-newspaper"></i>
                                                <span>My prescriptions</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/medical-records">
                                                <i class="fas fa-medkit"></i>
                                                <span>My Medical records</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/my-billing">
                                                <i class="fas fa-credit-card"></i>
                                                <span>My Billings</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/other-patients">
                                                <i class="fas fa-edit"></i>
                                                <span>Other Appointments</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="/favourites">
                                                <i class="fas fa-bookmark"></i>
                                                <span>Favourites</span>
                                            </a>
                                        </li>
                                       
                                       
                                       
                                    </ul>
                                </nav>
                            </div>

                        </div>
                    </div>
                    <!-- / Profile Sidebar -->
                    <div class="col-md-7 col-lg-8 col-xl-9">
                        <div class="col-md-12" style="min-height:380px;height:auto;border:1px solid lightgrey;padding-left: 0px;margin-bottom: 50px;border-radius: 5px;">
                        <div style="min-height:70px;height:auto;border-bottom:1px solid lightgrey;display: flex;width: 105%;">
                            <div style="width:25%;padding: 5px;">
                                <img src="<%=user.doctors[i].did.avatar%>"style="height:50px;width:50px;border-radius:50%;">
                            </div>
                            <div style="width:75%;padding-top: 5px;">
                                <h5 style="font-weight: bold;font-size: 1.2em;">Dr. <%=user.doctors[i].did.name%></h5> 
                                <h5 style="font-weight: bold;font-size: 1rem;margin-top: -5px;"><%=user.doctors[i].did.department%></h5>
                            </div>
                        </div>
                        <div style="min-height: 80px;height:auto;padding-left: 10px;padding-top: 10px;">
                            <h5 style="font-weight: bold;font-size: 1.1em;text-decoration: underline;">Appointment Date and Time</h5>
                            <h5 style="font-size: 1rem;font-weight: 500;"><%=user.doctors[i].date%>, <%=user.doctors[i].time%> <span class="badge badge-pill bg-success-light" style="margin-left: 20px;">Confirm</span></h5>
                        </div>
                        <div style="min-height: 90px;height:auto;padding-left: 10px;padding-top: 10px;">
                            <h5 style="font-weight: bold;font-size: 1.1em;text-decoration: underline;">Clinic Details</h5>
                            <h5 style="font-size: 1rem;font-weight: 500;word-wrap: break-word;"><%=user.doctors[i].did.clinicname%> </h5>
                            <h5 style="font-size: 1rem;font-weight: 500;word-wrap: break-word;"><%=user.doctors[i].did.clinicaddr%></h5>
                        </div>
                        <div style="min-height: 150px;height:auto;padding-left: 10px;padding-top: 10px;">
                            <h5 style="font-size: 1.1rem;font-weight: 700;">Patient Details </h5>
                            <div style="width: 100%;display: flex;">
                                <div style="width: 30%;">Name :</div>
                                <div style="width: 70%;"><%=user.doctors[i].name%></div>
                            </div>
                            <div style="width: 100%;display: flex;">
                                <div style="width: 30%;">Phone :</div>
                                <div style="width: 70%;">+91<%=user.doctors[i].phone%></div>
                            </div>
                            <div style="width: 100%;display: flex;">
                                <div style="width: 30%;">Email :</div>
                                <div style="width: 70%;height: auto;word-wrap: break-word;"><%=user.doctors[i].email%></div>
                            </div>
                        </div>
                        <div></div>

                   </div>
                </div>

            </div>

        </div>
        <!-- /Page Content -->

        <!-- Footer -->
        <%-include('footer');%>
        <!-- /Footer -->

    </div>
    <!-- /Main Wrapper -->

    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <!-- Sticky Sidebar JS -->
    <script src="plugins/theia-sticky-sidebar/ResizeSensor.js"></script>
    <script src="plugins/theia-sticky-sidebar/theia-sticky-sidebar.js"></script>

    <!-- Custom JS -->
    <script src="/js/script.js"></script>


</body>

<!-- doccure/locals.user-dashboard  30 Nov 2019 04:12:16 GMT -->

</html>